<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.LoginFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginHorizontal="147dp"
        android:layout_marginTop="20dp"
        android:src="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTitle"
        style="@style/Base.Widget.AppCompat.TextView.Title_23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="20dp"
        android:text="Acesse sua conta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />


    <com.br.ioasys.tremquevoa.presentation.ui.custom_views.CustomFormInput
        android:layout_marginTop="33dp"
        android:id="@+id/custom_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:custom_title="Seu e-mail:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <com.br.ioasys.tremquevoa.presentation.ui.custom_views.CustomFormInput
        android:layout_marginTop="10dp"
        android:id="@+id/custom_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:inputType="textPassword"
        app:custom_title="Digite uma senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_email" />

    <ToggleButton
        android:id="@+id/toggleStayConnected"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/toogle_selector"
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_password" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewStayConnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.TextView.LibreFranklin_Text_16_Medium"
        android:layout_marginStart="12dp"
        android:text="Permanecer concetado"
        app:layout_constraintStart_toEndOf="@+id/toggleStayConnected"
        app:layout_constraintTop_toTopOf="@+id/toggleStayConnected" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        style="@style/Base.Widget.AppCompat.TextView.LibreFranklin_Text_16_Medium"
        android:textColor="@color/button_color"
        android:text="Esqueceu a senha?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleStayConnected" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        style="@style/TextAppearance.AppCompat.Button.StyleButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="126dp"
        android:layout_marginTop="22dp"
        android:text="entrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewForgotPassword" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDontHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="41dp"
        android:text="NÃ£o tem uma conta?"
        style="@style/Base.Widget.AppCompat.TextView.LibreFranklin_Text_16_Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnRegister"
        style="@style/Base.Widget.AppCompat.TextView.LibreFranklin_Text_16_Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscreva-se"
        android:layout_marginStart="2dp"
        android:textColor="@color/button_color"
        app:layout_constraintStart_toEndOf="@+id/textViewDontHaveAnAccount"
        app:layout_constraintTop_toTopOf="@+id/textViewDontHaveAnAccount" />


</androidx.constraintlayout.widget.ConstraintLayout>