<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.ForgotPasswordFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textVIewTitle"
        style="@style/Base.Widget.AppCompat.TextView.Title_23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="213dp"
        android:text="Esqueci minha senha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSubTitle"
        style="@style/Base.Widget.AppCompat.TextView.LibreFranklin_Text_16_Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="37dp"
        android:text="Enviaremos uma senha para o e-mail cadastro, para que vocÃª possa redefinir sua senha."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVIewTitle" />

    <com.br.ioasys.tremquevoa.presentation.ui.custom_views.CustomFormInput
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="48dp"
        android:inputType="textEmailAddress"
        app:custom_title="E-mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSendEmail"
        style="@style/TextAppearance.AppCompat.Button.StyleButton"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="101dp"
        android:text="enviar para email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>