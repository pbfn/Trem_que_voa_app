<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.PerfilUserFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewImagePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_photo_perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewIconEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_image"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewImagePerfil"
        app:layout_constraintEnd_toEndOf="@+id/imageViewImagePerfil"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewImagePerfil" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewName"
        style="@style/Base.Widget.AppCompat.TextView.Title_23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Name"
        android:textColor="@color/neutral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewImagePerfil" />

    <com.br.ioasys.tremquevoa.presentation.ui.custom_views.CustomCardPerfil
        android:id="@+id/cardEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:subtitle="Eventos"
        app:title="2" />

    <com.br.ioasys.tremquevoa.presentation.ui.custom_views.CustomCardPerfil
        android:id="@+id/cardNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/cardEvents"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:subtitle="Eventos"
        app:title="2" />

    <com.br.ioasys.tremquevoa.presentation.ui.custom_views.CustomCardPerfil
        android:id="@+id/cardMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/cardNivel"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:subtitle="Eventos"
        app:title="2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAboutMe"
        style="@style/Base.Widget.AppCompat.TextView.Text_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:text="Sobre mim"
        android:textColor="@color/neutral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardEvents" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonEditAboutMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/ic_edit_neutral"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAboutMe"
        app:layout_constraintStart_toEndOf="@+id/textViewAboutMe" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editAboutMe"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:enabled="false"
        android:lines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAboutMe" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewInterest"
        style="@style/Base.Widget.AppCompat.TextView.Text_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:text="Interesses"
        android:textColor="@color/neutral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAboutMe" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/ic_edit_neutral"
        app:layout_constraintBottom_toBottomOf="@+id/textViewInterest"
        app:layout_constraintStart_toEndOf="@+id/textViewInterest" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewInterests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInterest"
        tools:itemCount="2"
        tools:listitem="@layout/interests_perfil_item_adapter" />


</androidx.constraintlayout.widget.ConstraintLayout>